@model TechnicalInterview.Exercice3.ViewModels.AddProductViewModel
@{
    /**/

    ViewBag.Title = "Add a new product";
}
<h2>@ViewBag.Title</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
<div class="alert alert-success" role="alert">
    @ViewBag.Message
</div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.ProductName, "Product name")
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProductDescription, "Product description")
        @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control" })
    </div>

    <input type="submit" value="Submit" class="btn btn-default" />
}
